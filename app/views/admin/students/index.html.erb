
<p><%= notice %> </p>
<h1>Listing Students</h1>
<%= link_to 'Add new student', new_admin_student_path %>

<table>
    <thead>
        <tr>
            <th>Student</th>
            <th>Email</th>
            <th colspan='3'>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td> <%= student.full_name %> </td>
                <td> <%= student.email %> </td>
                <td> <%= link_to 'View', admin_student_path(student) %> </td>
                <td> <%= link_to 'Edit', edit_admin_student_path(student) %> </td>
                <td> <%= link_to "Destroy", admin_student_path(student), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> </td>
            </tr>
        <% end %>

    </tbody>
</table>