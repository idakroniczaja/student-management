

<%= form_with model: student, local: true, data: { turbo: false } do |form| %>

    <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |message|%>
            <p><%= message %></p>
        <% end %>
    <% end %>


    <div>
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
    </div>
    <div>
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
    </div>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
        <div>
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth %>
    </div>
    <div>
        <%= form.label :permanent_contact_number %>
        <%= form.text_field :permanent_contact_number %>
    </div>
    <div>
        <%= form.label :local_address %>
        <%= form.text_field :local_address %>
    </div>
     <div>
        <%= form.label :permanent_address %>
        <%= form.text_field :permanent_address %>
    </div>
         <div>
        <%= form.label :alternate_contact_number %>
        <%= form.text_field :alternate_contact_number %>
    </div>


    <div>
        <%= form.submit %>
    </div>
    
<% end %>